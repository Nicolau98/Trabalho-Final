<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light navbar-dark bg-dark">
            <a class="navbar-brand" href="#">Site Pessoal</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home Page<span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Apresentacaos" asp-action="Index">Apresentação</a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" asp-controller="Curriculo" asp-action="Index">
                            Currículo
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" asp-controller="Experiencias" asp-action="Index">Experiência Profissional</a>
                            <a class="dropdown-item" asp-controller="Educacaos" asp-action="Index">Educação e Formação</a>
                            <a class="dropdown-item" asp-controller="Linguas" asp-action="Index">Línguas</a>
                            <a class="dropdown-item" asp-controller="CartaConducaos" asp-action="Index">Carta de Condução</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-controller="Curriculo" asp-action="Index">Tudo</a>
                        </div>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Anexos" asp-action="Index">Anexos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Mensagems" asp-action="Create">Contacto</a>
                    </li>
                </ul>

                <button type="button" class="btn btn-light"><partial name="_LoginPartial" /></button>
                
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark">
        <div class="container">
            <p class="float-md-left text-white">Copyright &copy; 2020 - All Rights Reserved - <a href="https://www.facebook.com/nicolau.barranha/">Nicolau Barranha</a></p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
